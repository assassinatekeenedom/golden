<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="script" class="org.apache.log4j.RollingFileAppender"> 
        <param name="File" value="///C:/golden/www/js/jsonp/server.js"/>
        <param name="MaxFileSize" value="100KB"/> 
        <param name="MaxBackupIndex" value="100000"/> 
        <param name="append" value="true"/> 
        <layout class="org.apache.log4j.PatternLayout"> 
            <param name="ConversionPattern" value="jsonp({&#34;json&#34;:[&#34;%d{EEE, dd MMM yyyy HH:mm:ss Z}&#34;,&#34;%t&#34;,&#34;%p&#34;,&#34;%c&#34;,&#34;%m&#34;,&#34;%r&#34;]});%n"/> 
        </layout> 
    </appender> 
    <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
        <layout class="org.apache.log4j.PatternLayout"> 
            <param name="ConversionPattern" value="jsonp({&#34;json&#34;:[&#34;%d{EEE, dd MMM yyyy HH:mm:ss Z}&#34;,&#34;%t&#34;,&#34;%p&#34;,&#34;%c&#34;,&#34;%m&#34;,&#34;%r&#34;]});%n"/> 
        </layout>
    </appender>
    <root> 
        <priority value ="DEBUG" /> 
        <appender-ref ref="script" /> 
        <appender-ref ref="console" /> 
    </root>
</log4j:configuration>